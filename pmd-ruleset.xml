<?xml version="1.0"?>

<ruleset name="Custom Rules"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>HtmlUnit rules</description>
    <exclude-pattern>.*/src/test/resources/.*</exclude-pattern>

    <exclude-pattern>.*/src/main/java/org/htmlunit/util/UrlUtils\.java</exclude-pattern>
    <exclude-pattern>.*/src/main/java/org/htmlunit/javascript/host/intl/NumberFormat\.java</exclude-pattern>
    <exclude-pattern>.*/src/main/java/org/htmlunit/javascript/host/intl/DateTimeFormat\.java</exclude-pattern>
    <exclude-pattern>.*/src/main/java/org/htmlunit/javascript/host/dom/DOMTokenList\.java</exclude-pattern>
    <exclude-pattern>.*/src/main/java/org/htmlunit/httpclient/HtmlUnitBrowserCompatCookieSpec\.java</exclude-pattern>
    <exclude-pattern>.*/src/main/java/org/htmlunit/html/xpath/XPathAdapter\.java</exclude-pattern>
    <exclude-pattern>.*/src/main/java/org/htmlunit/html/HtmlElement\.java</exclude-pattern>
    <exclude-pattern>.*/src/main/java/org/htmlunit/html/DomText\.java</exclude-pattern>
    <exclude-pattern>.*/src/main/java/org/htmlunit/DefaultCredentialsProvider\.java</exclude-pattern>

    <rule ref="category/java/bestpractices.xml" />

    <rule ref="category/java/codestyle.xml">
        <exclude name="AtLeastOneConstructor"/>
        <exclude name="ClassNamingConventions"/>
        <exclude name="FieldNamingConventions"/>
        <exclude name="LongVariable"/>
        <exclude name="OnlyOneReturn"/>
        <exclude name="ShortClassName"/>
        <exclude name="ShortMethodName"/>
        <exclude name="ShortVariable"/>
    </rule>

    <rule ref="category/java/design.xml">
    </rule>

    <rule ref="category/java/documentation.xml">
        <exclude name="CommentSize"/>
        <exclude name="CommentRequired"/>
    </rule>

    <rule ref="category/java/errorprone.xml">
        <exclude name="MissingSerialVersionUID"/>
    </rule>

    <rule ref="category/java/multithreading.xml" />

    <rule ref="category/java/performance.xml">
    </rule>

    <rule ref="category/java/security.xml" />

</ruleset>
